<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlanetaryCalculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_100</item>
        <item name="colorOnPrimaryContainer">@color/purple_900</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_50</item>
        <item name="colorOnSecondaryContainer">@color/teal_900</item>
        
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/amber_200</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/amber_50</item>
        <item name="colorOnTertiaryContainer">@color/amber_900</item>
        
        <!-- Error color. -->
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/red_50</item>
        <item name="colorOnErrorContainer">@color/red_900</item>
        
        <!-- Surface colors. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/gray_100</item>
        <item name="colorOnSurfaceVariant">@color/gray_700</item>
        
        <!-- Background colors. -->
        <item name="colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        
        <!-- Customize your theme here. -->
    </style>
    
    <!-- Dark theme variant -->
    <style name="Theme.PlanetaryCalculator.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimaryContainer">@color/purple_50</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/teal_50</item>
        
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/amber_200</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/amber_700</item>
        <item name="colorOnTertiaryContainer">@color/amber_50</item>
        
        <!-- Error color. -->
        <item name="colorError">@color/red_200</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorErrorContainer">@color/red_700</item>
        <item name="colorOnErrorContainer">@color/red_50</item>
        
        <!-- Surface colors. -->
        <item name="colorSurface">@color/gray_900</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/gray_800</item>
        <item name="colorOnSurfaceVariant">@color/gray_300</item>
        
        <!-- Background colors. -->
        <item name="colorBackground">@color/gray_900</item>
        <item name="colorOnBackground">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.PlanetaryCalculator.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.PlanetaryCalculator</item>
    </style>
    
    <!-- Dialog theme -->
    <style name="Theme.PlanetaryCalculator.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>
    
    <!-- Button styles -->
    <style name="Widget.PlanetaryCalculator.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.Material3.Button</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.PlanetaryCalculator.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Material3.Button</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Card styles -->
    <style name="Widget.PlanetaryCalculator.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="TextAppearance.PlanetaryCalculator.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.PlanetaryCalculator.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.PlanetaryCalculator.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>
</resources>